<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>cars.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>VehicleBookingServlet</servlet-name>
        <servlet-class>VehicleBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitPaymentServlet</servlet-name>
        <servlet-class>SubmitPaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBookingDetailsServlet</servlet-name>
        <servlet-class>GetBookingDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePaymentStatusServlet</servlet-name>
        <servlet-class>UpdatePaymentStatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVehicleServlet</servlet-name>
        <servlet-class>AddVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditVehicleServlet</servlet-name>
        <servlet-class>EditVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExtendedVehicleUpdateServlet</servlet-name>
        <servlet-class>ExtendedVehicleUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VehicleBookingServlet</servlet-name>
        <url-pattern>/VehicleBooking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitPaymentServlet</servlet-name>
        <url-pattern>/SubmitPayment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBookingDetailsServlet</servlet-name>
        <url-pattern>/getBookingDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePaymentStatusServlet</servlet-name>
        <url-pattern>/UpdatePaymentStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVehicleServlet</servlet-name>
        <url-pattern>/AddVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditVehicleServlet</servlet-name>
        <url-pattern>/EditVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExtendedVehicleUpdateServlet</servlet-name>
        <url-pattern>/ExtendedVehicleUpdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
